<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvModules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5E1ED5"
        android:fontFamily="serif-monospace"
        android:text="Your Modules:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvC203"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C203 Web AppIn Development in PHP"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvC206"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C206 Software Development Process"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvC218"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C218 UI/UX Design for Apps"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvC235"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C235 IT Security and Management"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvC346"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C346 Mobile App Development"
        android:textColor="#000000"
        android:textSize="20dp" />

</LinearLayout>